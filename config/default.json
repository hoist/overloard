{
  "Hoist": {
    "application": {
      "name": "portal.hoist.io"
    },
    "admin": {
      "applicationId": "docker-admin-app"
    },
    "rabbit": {
      "url": "amqp://rabbitmq",
      "managementUrl": "http://guest:guest@rabbitmq:15672/"
    },
    "consul" : {
      "host" : "consul.hoist.io",
      "port" : 8500
    },
    "fleet" : {
      "host" : "fleet.hoist.io",
      "port":  49153
    },
    "cookies": {
      "portal": {
        "secure": false,
        "name": "portal-sid",
        "password": "portal-cookie-password"
      },
      "beta": {
        "secure": false,
        "name": "beta-sid",
        "password": "beta-cookie-password"
      }
    },
    "webpack": {
      "optimize": true
    },
    "mongo": {
      "core": {
        "connectionString": "mongodb://db/hoist-default"
      }
    },
    "filePaths": {
      "connectors": "./connectors",
      "deploys": "./deploys"
    },
    "domains": {
      "api": "api.hoi.test",
      "portal": "portal.hoist.test",
      "bouncer": "bouncer.hoist.test",
      "git": "git.hoi.test",
      "endpoint": "endpoint.hoi.test"
    },
    "security": {
      "passwordStrength": 8
    },
    "postmark": {
      "key": "POSTMARK_API_TEST"
    }
  }
}
